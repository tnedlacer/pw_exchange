<div class="jumbotron">
  <h1><%= PwExchange::SiteName %></h1>
  <h2 class="lead"><%= t("text.index_lead") %></h2>
  <div class="row labels">
    <h4 class="col-md-4 text-left">
      <span class="label label-primary"><%= t("text.index_feature1") %></span>
    </h4>
    <h4 class="col-md-4 text-center">
      <span class="label label-primary"><%= t("text.index_feature2") %></span>
    </h4>
    <h4 class="col-md-4 text-right">
      <span class="label label-primary"><%= t("text.index_feature3") %></span>
    </h4>
  </div>
</div>

<div class="row introduction">
  <div class="col-md-6 pw_requests">
    <div class="panel panel-info">
      <div class="panel-body">
        <%= link_to t("text.pw_requests_title"), pw_requests_form_path, class: "btn btn-info btn-lg btn-block" %>
      </div>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="row">
            <strong class="col-md-6 text-center"><%= t("text.you") %></strong>
            <strong class="col-md-6 text-center"><%= t("text.other") %></strong>
          </div>
        </li>
        <li class="list-group-item text-left"><span aria-hidden="true" class="glyphicon glyphicon-edit"></span><%= t("text.pw_requests_list1") %></li>
        <li class="list-group-item text-left"><span aria-hidden="true" class="glyphicon glyphicon-share"></span><%= t("text.pw_requests_list2") %></li>
        <li class="list-group-item text-right"><%= t("text.pw_requests_list3") %><span aria-hidden="true" class="glyphicon glyphicon-edit"></span></li>
        <li class="list-group-item text-left"><span aria-hidden="true" class="glyphicon glyphicon-check"></span><%= t("text.pw_requests_list4") %></li>
      </ul>
    </div>
  </div>
  <div class="col-md-6 pw_senders">
    <div class="panel panel-info">
      <div class="panel-body">
        <%= link_to t("text.pw_senders_title"), pw_senders_form_path, class: "btn btn-info btn-lg btn-block" %>
      </div>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="row">
            <strong class="col-md-6 text-center"><%= t("text.you") %></strong>
            <strong class="col-md-6 text-center"><%= t("text.other") %></strong>
          </div>
        </li>
        <li class="list-group-item text-left"><span aria-hidden="true" class="glyphicon glyphicon-edit"></span><%= t("text.pw_senders_list1") %></li>
        <li class="list-group-item text-left"><span aria-hidden="true" class="glyphicon glyphicon-share"></span><%= t("text.pw_senders_list2") %></li>
        <li class="list-group-item text-right"><%= t("text.pw_senders_list3") %><span aria-hidden="true" class="glyphicon glyphicon-edit"></span></li>
        <li class="list-group-item text-right"><%= t("text.pw_senders_list4") %><span aria-hidden="true" class="glyphicon glyphicon-check"></span></li>
      </ul>
    </div>
  </div>
</div>
